<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/headerbackground"
    android:theme="@style/Widget.AppCompat.Light.ActionBar"
    app:buttonGravity="center_vertical"
    app:collapseIcon="@drawable/backarrowwhite"
    app:navigationIcon="@drawable/burgermenuicon">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/CDILogoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cdi_logo___without_technologies_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>