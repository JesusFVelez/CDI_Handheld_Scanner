<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    android:background="@drawable/regular_popup_background"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/information_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/enterItemQuantityText"
        style="@style/PopupMessageBigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Item Count"
        app:layout_constraintEnd_toEndOf="@+id/icon"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <TextView
        android:id="@+id/EnterQuantitytoCount"
        style="@style/PopupMessageBigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Quantity to Count"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/icon"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/enterItemQuantityText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="297dp"
        android:layout_height="94dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/listitembackgroundview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterQuantitytoCount">

        <TextView
            android:id="@+id/ItemNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:padding="1dp"
            android:text="S32567"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingTop="1dp"
            android:text="Santa Monica Auto Parts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ItemNumberTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/barcodeIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/date_time"
            app:layout_constraintStart_toStartOf="@+id/descriptionTextView"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

        <TextView
            android:id="@+id/expirationDateLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Exp Date:"
            app:layout_constraintStart_toEndOf="@+id/barcodeIcon"
            app:layout_constraintTop_toTopOf="@+id/barcodeIcon" />

        <ImageView
            android:id="@+id/binIcon"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/bindetailpage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ItemNumberTextView"
            app:layout_constraintTop_toBottomOf="@+id/ItemNumberTextView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/binLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="01001"
            app:layout_constraintBottom_toBottomOf="@+id/binIcon"
            app:layout_constraintStart_toEndOf="@+id/binIcon"
            app:layout_constraintTop_toTopOf="@+id/binIcon" />

        <TextView
            android:id="@+id/orderDateValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="01/01/2023"
            app:layout_constraintStart_toEndOf="@+id/expirationDateLabelTextView"
            app:layout_constraintTop_toTopOf="@+id/expirationDateLabelTextView" />


        <ImageView
            android:id="@+id/lotIcon"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/batch_or_lote_icon"
            app:layout_constraintStart_toStartOf="@+id/barcodeIcon"
            app:layout_constraintTop_toBottomOf="@+id/barcodeIcon" />

        <TextView
            android:id="@+id/lotNumberLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Lot Number:"
            app:layout_constraintBottom_toBottomOf="@+id/lotIcon"
            app:layout_constraintStart_toEndOf="@+id/lotIcon"
            app:layout_constraintTop_toTopOf="@+id/lotIcon" />

        <TextView
            android:id="@+id/dateWantedValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="ggez"
            app:layout_constraintStart_toEndOf="@+id/lotNumberLabelTextView"
            app:layout_constraintTop_toTopOf="@+id/lotNumberLabelTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/itemAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_white_backgroung"
        android:gravity="center"
        android:hint="@string/amount_to_move"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        style="@style/PopupButtons"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemAmountEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>