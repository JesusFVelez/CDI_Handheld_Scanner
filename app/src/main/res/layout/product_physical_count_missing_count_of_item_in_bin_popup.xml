<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/regular_popup_background"
    >

    <ImageView
        android:id="@+id/questionIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/warning_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemNumberTextView"
        style="@style/PopupMessageBigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="S11001"
        app:layout_constraintEnd_toEndOf="@+id/questionIcon"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/questionIcon"
        app:layout_constraintTop_toBottomOf="@+id/questionIcon" />

    <TextView
        android:id="@+id/PartialOrFullCountSelectionTextView"
        style="@style/PopupMessageSmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Count the item in the following bins:"
        app:layout_constraintEnd_toEndOf="@+id/itemNumberTextView"
        app:layout_constraintStart_toStartOf="@+id/itemNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/itemNumberTextView" />

    <TextView
        android:id="@+id/BinNumberTextView"
        style="@style/PopupMessageSmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000, 01001, 02002, 03003, 04004"
        app:layout_constraintEnd_toEndOf="@+id/itemNumberTextView"
        app:layout_constraintStart_toStartOf="@+id/itemNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/PartialOrFullCountSelectionTextView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PartialOrFullCountSelectionTextView"
        app:layout_constraintStart_toStartOf="@+id/PartialOrFullCountSelectionTextView"
        app:layout_constraintTop_toBottomOf="@id/PartialOrFullCountSelectionTextView"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/YesButton"
            style="@style/PopupButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="Yes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PartialOrFullCountSelectionTextView"
            tools:layout_editor_absoluteX="20dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/NoButton"
            style="@style/PopupButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="No"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PartialOrFullCountSelectionTextView"
            tools:layout_editor_absoluteX="180dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>