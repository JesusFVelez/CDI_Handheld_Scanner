<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    <style name="CDI_Yellow" parent="Base.Theme.CDIHandheldScannerViewActivity">-->
<!--        <item name="android:back">@color/CDI_Yellow</item>-->
<!--    </style>-->
    <style name="BoldItalicText">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="CustomScannerInput">
        <item name="android:background" >@drawable/bin_number_text_box</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomScannerInputWhite">
        <item name="android:background" >@drawable/white_scan_text_box</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomOrderInput">
        <item name="android:background" >@drawable/order_number_text_box</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomUserInput">
        <item name="android:background" >@drawable/rectangle_text_box</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PopupMessageBigText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginDropDowns">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="regularButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/menu_option_button</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupMessageSmallText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupButtons">
        <item name="android:background">@drawable/popup_button_background</item>
    </style>

    <style name="WarningText">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>